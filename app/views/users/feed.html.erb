<h1><%= @the_user.username %></h1>

<dl>
  <dt>Private</dt>
  <dd><%= @the_user.private %></dd>

  <dt>Followers</dt>
  <dd><%= @the_user.received_follow_requests_count %></dd>

  <dt>Following</dt>
  <dd><%= @the_user.sent_follow_requests_count %></dd>

</dl>

<nav>
  <ul>
    <li>
      <a href="/users/<%= @the_user.username %>">Profile</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/discover">Discover</a>
    </li>
  </ul>
</nav>

<h2>Feed (<%= @feed_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th></th>
  </tr>

  <% @feed_photos.each do |a_photo| %>
  <tr>
    <td>
      <img src="<%= a_photo.image %>" class="img-responsive">
    </td>

    <td>
      <%= a_photo.owner.username %>
    </td>

    <td>
     <%= a_photo.caption %>
    </td>

    <td>
     <%= time_ago_in_words(a_photo.created_at) %> ago
    </td>

    <td>
     <%= a_photo.likes_count %>
    </td>

    <td>
      <a href="/photos/<%= a_photo.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
